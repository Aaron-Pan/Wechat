@import '/pages/index/ico.wxss';
.search{
  width: 100%;
  height:120rpx;
}
.sousuo{
  display: flex;
  flex-wrap: wrap;
  margin:5% auto;
  border-radius: 10rpx;
  width: 95%;
  height: 75rpx;
  background-color: rgba(220, 220, 220, 0.637);
  line-height: 80rpx;
}
.sousuo span{
  color: rgba(177, 175, 175, 0.616);
 text-indent: 0.5em;
}
.sousuo input{
  padding: 15rpx;
  font-size: 30rpx;
}
.icon-fangdajing{font-size: 22rpx;}
.middleman{
  display: flex;
  width: 100%;
  height: 220rpx;
  border-bottom: 2rpx solid gainsboro;
}
.middleman_img{ 
  margin-top: 20rpx;
  width: 25%;
  height: 200rpx;
}
.middleman_title{
  margin-top: 20rpx;
  width: 25%;
  height: 200rpx;
}
.middleman_img image{
  width: 100rpx;
  height: 130rpx;
  margin: 30rpx;
  border-radius: 50%;
}
.man{
  margin-top: 15%;
  font-size: 32rpx;

}
.partment{
  margin-top: 5%;
  font-size: 28rpx;
  color: gray;
}
.yeji{
  display: flex;
}
.shou{
  text-align: center;
  width: 80rpx;
  line-height: 35rpx;
  border-radius: 8rpx;
  height: 35rpx;
  margin-top: 5%;
  font-size: 20rpx;
  background-color: gainsboro;
  color: gray;
}
.zu{
  margin-left:5%; 
}
.middleman_icon{
  float: right;
  margin-top: 40rpx;
  width: 40%;
  height: 200rpx;

}
.middleman_icon span{
  float: right;
  margin: 20% 10% 0 0;
  color: #ed5d29;
  font-size: 50rpx;
}
